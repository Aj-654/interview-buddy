<script>

  pdfjsLib.GlobalWorkerOptions.workerSrc =
    "https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.worker.min.js";
  let pdfinput = document.querySelector(".selectpdf");

  let upload = document.querySelector(".upload");
  let generate = document.querySelector(".generate");

  document.getElementById('chooseFileBtn').addEventListener('click', function() {
    document.getElementById('selectpdf').click(); // Trigger click event on hidden file input
  });

  upload.addEventListener("click", () => {
    let file = pdfinput.files[0];
    if (file != undefined && file.type == "application/pdf") {
      let fr = new FileReader();
      fr.readAsDataURL(file);
      fr.onload = () => {
        let res = fr.result;

        extractText(res, false);
      };
    }
  });
  var alltext = "";

  async function extractText(url, pass) {
    try {
      let pdf;

      pdf = await pdfjsLib.getDocument(url).promise;

      let pages = pdf.numPages;
      for (let i = 1; i <= pages; i++) {
        let page = await pdf.getPage(i);
        let txt = await page.getTextContent();
        let text = txt.items.map((s) => s.str).join("");
        alltext += text + "\n";
      }
      console.log(alltext);
    } catch (err) {
      alert(err.message);
    }
  }
  var sentencesList = [];
  
  generate.addEventListener('click', async () => {
  try {
    const response = await fetch('/openai', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ alltext })
    });
    if (!response.ok) {
      throw new Error('Network response was not ok');
    }
    const responseData = await response.json(); // Assuming the response is JSON
    console.log(responseData);

    // Split the responseData.content into separate questions based on newline character
    sentencesList = responseData.split('\n').map(sentence => sentence.trim()).filter(sentence => sentence); 

    console.log(sentencesList); // Logging the sentencesList array
  } catch (error) {
    console.error('Error:', error);
  }
});

const toggleMicrophoneButton = document.getElementById('toggleMicrophone');
const recordedAnswerContainer = document.getElementById('recordedAnswerContainer');

let isRecording = false;
let mediaRecorder;
let chunks = [];

toggleMicrophoneButton.addEventListener('click', async () => {
    if (!isRecording) {
        isRecording = true;
        toggleMicrophoneButton.innerText = 'Stop Recording';
        
        try {
            const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
            mediaRecorder = new MediaRecorder(stream);

            mediaRecorder.addEventListener('dataavailable', (event) => {
                chunks.push(event.data);
            });

            mediaRecorder.addEventListener('stop', async () => {
                const blob = new Blob(chunks, { type: 'audio/wav' });
                console.log(blob);
                const formData = new FormData();
                formData.append('audio', blob, 'audio.wav');
                console.log(formData.get('audio'));
                console.log(formData);
                // Send recorded audio to the server
                try {
                    const response = await fetch('/process_audio', {
                        method: 'POST',
                        body: formData
                    });

                    if (response.ok) {
                        const responseData = await response.json();
                        console.log('Server response:', responseData);
                        // Display server response as needed
                        recordedAnswerContainer.innerText = JSON.stringify(responseData);
                    } else {
                        console.error('Server response was not ok');
                    }
                } catch (error) {
                    console.error('Error sending recorded audio:', error);
                }
                
                // Reset variables
                isRecording = false;
                toggleMicrophoneButton.innerText = 'Start Recording';
                chunks = [];
            });

            // Start recording
            mediaRecorder.start();
        } catch (error) {
            console.error('Error recording:', error);
            isRecording = false;
            toggleMicrophoneButton.innerText = 'Start Recording';
        }
    } else {
        mediaRecorder.stop();
        isRecording = false;
        toggleMicrophoneButton.innerText = 'Start Recording';
    }
});




</script>

<script>
  let questionAnswerPairs = [];
  var voiceList = document.querySelector("#voiceList");
  var btnSpeak = document.querySelector("#btnSpeak");
  var synth = window.speechSynthesis;
  var voices = [];

  var wordIndex = 0;
  var wordSpan = document.querySelector("#word");

  PopulateVoices();
  if (speechSynthesis !== undefined) {
    speechSynthesis.onvoiceschanged = PopulateVoices;
  }

  btnSpeak.addEventListener("click", () => {
    const recordedAnswerContainer = document.getElementById('recordedAnswerContainer');
    const question = sentencesList[wordIndex];
    const answer = recordedAnswerContainer.innerText;
    questionAnswerPairs.push({ question, answer });
    var toSpeak = new SpeechSynthesisUtterance(sentencesList[wordIndex]);
    var selectedVoiceName =
      voiceList.selectedOptions[0].getAttribute("data-name");
    voices.forEach((voice) => {
      if (voice.name === selectedVoiceName) {
        toSpeak.voice = voice;
      }
    });
    synth.speak(toSpeak);

    wordIndex++;
    if (wordIndex >= sentencesList.length + 2) {
      wordIndex = 0;
    }
    wordSpan.textContent = sentencesList[wordIndex - 1];
    if (wordIndex == sentencesList.length+1) {
      btnSpeak.textContent = "Completed";
      wordIndex = 0;
      questionAnswerPairs.forEach(pair => {
        console.log(`Question: ${pair.question}`);
        console.log(`Answer: ${pair.answer}`);
    });
    }
    recordedAnswerContainer.innerText = '';
  });

  function PopulateVoices() {
    voices = synth.getVoices();
    var selectedIndex =
      voiceList.selectedIndex < 0 ? 0 : voiceList.selectedIndex;
    voiceList.innerHTML = "";
    voices.forEach((voice) => {
      var listItem = document.createElement("option");
      listItem.textContent = voice.name;
      listItem.setAttribute("data-lang", voice.lang);
      listItem.setAttribute("data-name", voice.name);
      voiceList.appendChild(listItem);
    });

    voiceList.selectedIndex = selectedIndex;
  }
  reportcontent = document.getElementById('completereport');
  report.addEventListener('click', async () => {
  try {
    const response = await fetch('/question_ans', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ questionAnswerPairs })
    });
    if (!response.ok) {
      throw new Error('Network response was not ok');
    }
    const responseData = await response.json(); // Assuming the response is JSON
    console.log(responseData);
    reportcontent.innerHTML = responseData

  } catch (error) {
    console.error('Error:', error);
  }
});

</script>

